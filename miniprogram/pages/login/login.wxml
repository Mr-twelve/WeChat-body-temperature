<view class="page">
  <view class="weui-form">
    <view class="weui-form__text-area">
      <view class="weui-form__title">
        <view>
          <image mode='widthFix' style="width:60%;" src="cloud://text-6j4lw.7465-text-6j4lw-1301260971/照片/山西农业大学校徽（PNG无背景格式，日常办公使用）.png" />
        </view>
      </view>
      <view class="weui-form__desc"></view>
    </view>
    <form bindsubmit="formSubmit" bindreset="formReset">
      <!-- 这是表单部分 -->
      <view class="weui-form__control-area">
        <view class="weui-cells__group weui-cells__group_form" style="padding:0 144rpx;">
          <!-- <view class="weui-cells__title">登陆方式</view> -->
          <view class="weui-cells weui-cells_form">
            <view class="weui-cell">
              <view class="weui-cell__hd">
                <label class="weui-label">学号</label>
              </view>
              <view class="weui-cell__bd">
                <input name="xuehao" class="weui-input" type="text" pattern="[0-9]*" placeholder="请输入学号" />
              </view>
            </view>
            <view class="weui-cell">
              <view class="weui-cell__hd">
                <label class="weui-label">密码</label>
              </view>
              <view class="weui-cell__bd">
                <input name="mima" class="weui-input" type="password" pattern="[0-9]*" placeholder="请输入密码" />
              </view>
            </view>
          </view>
        </view>
      </view>
      <!--  -->
      <view class="weui-form__tips-area">
        <label for="weuiAgree" class="weui-agree">
          <checkbox-group bindchange="radioChange">
            <checkbox value="tiaokuan">
              <span class="weui-agree__text">阅读并同意
                <text style="color:#1E90FF;" bindtap="tiaokuan">《相关条款》</text>
              </span>
            </checkbox>
          </checkbox-group>
        </label>
      </view>
      <!-- <view class="weui-form__tips-area">
        <label for="weuiAgree" class="weui-agree">
          <input id="weuiAgree" type="checkbox" class="weui-agree__checkbox" />
          <span class="weui-agree__text">武汉加油！中国加油！
          </span>
        </label>
      </view> -->
      <view class="weui-form__opr-area">
        <button style="background:LightBLue" type="primary" formType="submit">登陆</button>
      </view>
    </form>
    <view class="weui-form__tips-area">
      <view class="weui-form__tips">
        <!-- 点击下一步即表示同意用户协议 -->
      </view>
    </view>
    <view class="weui-form__extra-area logo" style="">
      <view class="weui-footer">
        <view class="weui-footer__links">
          <view class="weui-footer__link">软件学院</view>
        </view>
        <view class="weui-footer__text">Copyright © 2019-2020 石头工作室</view>
      </view>
    </view>
  </view>
</view>